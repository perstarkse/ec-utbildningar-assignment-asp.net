@model UserAdminViewModel

<section class="onePage menu-spacer">
    <div class="container">
        <div class="d-flex justify-content-between mt-3">
            <h1>User Administration</h1>
            <a class="btn-theme btn-replacement" asp-controller="Admin" asp-action="CreateUserAsAdmin">Create new user</a>
        </div>
        <div class="table-responsive">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <a asp-action="EditUser" asp-controller="Admin" asp-route-id="@user.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>