@model GridCollectionViewModel

@if(Model != null)
{
	<section class="collection">
	<div class="container">
			<h1 class="collection-title">@Model.Title</h1>
			@if (Model.Categories != null)
			{
					<ul class="categories">
					@foreach (var category in Model.Categories)
					{
								<li class="category-item">@category</li>
					}
					</ul>
			}
			@if (Model.GridItems != null)
			{
					<div class="collection-grid">
					@foreach (var item in Model.GridItems)
					{
						<partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item" />
					}
					</div>
			}

			@if (Model.LoadMore == true)
			{
					<div class="load-more">
						<button class="btn-white">
							LOAD MORE <i class="fa-solid fa-rotate-right"></i>
						</button>
					</div>
			}

		</div>
	</section>
}
