@model GridCollectionItemViewModel

<a asp-controller="Products" asp-action="Detailed" asp-route-id="@Model.Id" class="collection-item">
	<img src="@Model.ImageUrl" alt="@Model.Title" />
	<div class="body">
		<div class="info">
			<div class="title">@Model.Title</div>
			<div class="price">@Model.Price</div>
		</div>
		<i class="tocart fa-regular fa-cart-plus"></i>
	</div>
</a>
