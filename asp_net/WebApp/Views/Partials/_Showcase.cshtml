@inject ShowcaseService showcaseService
@{
	var showcase = showcaseService.GetLatest();
}
@if(showcase != null)
{
	<section class="showcase menu-spacer">
		<div class="container">
			<div class="content">
				<div class="ingress">@showcase?.Ingress</div>
				<div class="title">@showcase?.Title</div>
				@if (!string.IsNullOrEmpty(showcase?.Button?.Url) && !string.IsNullOrEmpty(showcase?.Button?.Content))
				{
					<a href="@showcase?.Button?.Url" class="btn-theme btn-standard">@showcase?.Button?.Content</a>
				}
			</div>
			<img src="@showcase?.ImageUrl" alt="@showcase?.Title" />
		</div>
	</section>
}
